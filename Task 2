#include <iostream>
using namespace std;

int main()
{
          std::string myName;
 std::cout << "Введите имя: ";
   std::cin >> myName;
  
  std::string Name = "Вячеслав";
   
   if (myName == Name)  
        cout<<"Привет";
      
  else // в противном случае, сообщаем пользователю, что что-то пошло не так
           cout << "Нет такого имени.\n";

}
